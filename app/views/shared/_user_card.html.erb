<div class="col-sm">
    <div class="card">
        <div class="avatar-square" style="background-image: url(<%= user.avatar_image %>);"></div>
        <div class="user_info">
            <h2><%= link_to user.full_name, user_path(user) %></h2>
            <h3><%= user.email %></h3>
            <p> <%= user.role == true ? 'Is an admin' : 'Is not an admin' %></p>
            <%= render 'shared/controls', user: user %>
        </div>
    </div>
</div>